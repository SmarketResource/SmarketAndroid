<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mercado"
    android:orientation="vertical"
    android:paddingBottom="05dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="05dp"
    tools:context="com.example.talit.smarket.ActConsumidores.CadastroPessoaFisica">

    <ScrollView
        android:id="@+id/alterar_dados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ln_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <EditText
                android:id="@+id/ed_nome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_senha"
                android:hint="@string/txt_nome"
                android:imeOptions="actionUnspecified"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent"
                tools:targetApi="m" />

            <TextView
                android:id="@+id/txt_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="05dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="05dp"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ed_sobrenome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_senha"
                android:ems="10"
                android:hint="@string/txt_sobrenome"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_sobrenome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="05dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="05dp"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ed_email_consumidor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_email"
                android:ems="10"
                android:hint="@string/ed_email_consumidor"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="05dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="05dp"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borda_edittext"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    app:srcCompat="@mipmap/ic_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <Spinner
                    android:id="@+id/sp_tp_tel"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"
                    tools:backgroundTint="@color/colorAccent"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/ed_telefones"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_phone"
                android:drawableTint="@color/colorAccent"
                android:ems="10"
                android:hint="@string/edt_telefones"
                android:inputType="number"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="05dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="05dp"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ed_senha_cadastrar"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_cadeado_senha"
                android:drawableTint="@color/colorAccent"
                android:ems="2"
                android:hint="@string/edt_senha_cliente"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="05dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="05dp"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ed_senha_confimar_cadastrar"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@mipmap/ic_cadeado_senha"
                android:drawableTint="@color/colorAccent"
                android:ems="2"
                android:hint="@string/ed_confirm_senha"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_confirmar_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="05dp"
                android:layout_marginStart="08dp"
                android:layout_marginTop="05dp"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_cadastro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bordas_grid_buttons"
                android:text="@string/btn_cadastro"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:text="@string/btn_cadastro" />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/pb_cadastro"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</RelativeLayout>
