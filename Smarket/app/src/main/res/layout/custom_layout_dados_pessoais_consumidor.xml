<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparente">

    <TextView
        android:id="@+id/level_um"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/borda_level"
        android:gravity="center"
        android:text="@string/txt_fase_um"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/txt_dados_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/level_um"
        android:text="@string/txt_dados_pessoais"
        android:textColor="#ffff"
        android:textSize="18dp"
        tools:ignore="HardcodedText,SpUsage" />


    <View
        android:id="@+id/divider_level_um"
        android:layout_width="1dp"
        android:layout_height="337dp"
        android:layout_below="@id/level_um"
        android:layout_marginStart="27dp"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/dados_pessoais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/divider_level_um"
        android:layout_below="@+id/level_um"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_edittext"
            android:drawableLeft="@mipmap/ic_senha"
            android:hint="@string/txt_nome"
            android:imeOptions="actionUnspecified"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/txt_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="05dp"
            android:layout_marginStart="08dp"
            android:layout_marginTop="05dp"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_sobrenome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:background="@drawable/borda_edittext"
            android:drawableLeft="@mipmap/ic_senha"
            android:ems="10"
            android:hint="@string/txt_sobrenome"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent" />

        <TextView
            android:id="@+id/txt_sobrenome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="05dp"
            android:layout_marginStart="08dp"
            android:layout_marginTop="05dp"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_email_consumidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:background="@drawable/borda_edittext"
            android:drawableLeft="@mipmap/ic_email"
            android:ems="10"
            android:hint="@string/ed_email_consumidor"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="05dp"
            android:layout_marginStart="08dp"
            android:layout_marginTop="05dp"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp" />

