        <EditText
            android:id="@+id/ed_telefones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:background="@drawable/borda_edittext"
            android:drawableLeft="@mipmap/ic_phone"
            android:drawableTint="@color/colorAccent"
            android:ems="10"
            android:hint="@string/edt_telefones"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent" />

        <TextView
            android:id="@+id/txt_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="05dp"
            android:layout_marginStart="08dp"
            android:layout_marginTop="05dp"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp" />


        <Button
            android:id="@+id/bt_level_um"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/inactive_button"
            android:enabled="false"
            android:text="@string/btn_prosseguir"
            android:textColor="#fff"
            tools:ignore="RelativeOverlap,RtlHardcoded" />

    </LinearLayout>

</RelativeLayout>